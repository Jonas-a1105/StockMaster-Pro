{
  "name": "stockmaster-pro-desktop",
  "productName": "StockMaster Pro",
  "version": "1.1.5",
  "description": "StockMaster Pro - Sistema de Gesti√≥n Empresarial",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "StockMaster Solutions",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "Jonas-a1105",
        "repo": "StockMaster-Pro"
      }
    ],
    "appId": "com.stockmaster.pro",
    "win": {
      "target": "nsis",
      "icon": "public/img/StockMasterPro.ico",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false,
      "artifactName": "StockMaster.Pro.Setup.${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "StockMaster Pro",
      "runAfterFinish": true,
      "installerIcon": "public/img/StockMasterPro.ico",
      "uninstallerIcon": "public/img/StockMasterPro.ico",
      "installerHeaderIcon": "public/img/StockMasterPro.ico",
      "deleteAppDataOnUninstall": true,
      "license": "LICENSE.txt"
    },
    "extraResources": [
      {
        "from": "resources/bin",
        "to": "bin"
      },
      "src",
      "public",
      "views",
      "vendor",
      "database"
    ]
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2"
  }
}